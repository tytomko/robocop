<?xml version="1.0" ?>
<sdf version="1.4">
  <world name="default">
    <!-- 지면 -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- 태양(조명) -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- 사용자 월드(예: turtlebot3_dqn_world) -->
    <include>
      <uri>model://turtlebot3_dqn_world</uri>
    </include>

    <!-- 로봇 모델 (ssafy_model) -->
    <include>
      <pose>0 -1.7 0.01 0.0 0.0 0.0</pose>
      <uri>model://ssafy_model</uri>
    </include>
    
    <model name="patrol_path">
      <static>true</static>
      <link name="path_plane">
        <pose>0 0 0.01 0 0 0</pose>
        <visual name="path_visual">
          <geometry>
            <plane>
              <size>10 10</size>  <!-- 이미지 크기에 맞게 조정 -->
            </plane>
          </geometry>
          <material>
            <script>
              <uri>model://path_texture</uri>
              <name>Gazebo/Gray</name>
            </script>
          </material>
        </visual>
      </link>
    </model>


    <!-- 여기서부터 위치(위도, 경도, 고도)를 설정 -->
    <spherical_coordinates>
      <surface_model>EARTH_WGS84</surface_model>
      <latitude_deg>35.1595</latitude_deg>
      <longitude_deg>126.8526</longitude_deg>
      <elevation>50</elevation>
      <heading_deg>0</heading_deg>
    </spherical_coordinates>

  </world>
</sdf>
